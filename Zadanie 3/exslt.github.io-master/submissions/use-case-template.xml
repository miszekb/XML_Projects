<?xml version="1.0"?>
<!-- enter the type of the use case in the type attribute;
        example  - an example of how the extension works normally
        boundary - an example of operation in a boundary case
        error    - an example of an error in the use of the extension -->
<!-- enter the file name of the data file (if there is one) in the data 
     attribute -->
<!-- enter the calling stylesheet file name in the xslt attribute -->
<!-- enter the file name of the result file (if there is one) in the result 
     attribute -->
<exslt:use-case xmlns:exslt="http://exslt.org/documentation"
                type="example" 
                data="data-file.xml"
                xslt="calling-stylesheet.xsl" 
                result="result-file.xml">

<!-- enter qualified name for function '.use-case.' number in ID attribute -->
<rdf:Description xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
                 xmlns:dc="http://purl.org/dc/elements/1.1/"
                 ID="module:function.use-case.number">
   <dc:subject>EXSLT</dc:subject>
   <dc:subject><!-- enter module prefix --></dc:subject>
   <dc:subject><!-- enter function name --></dc:subject>
   <dc:subject><!-- enter type of use case --></dc:subject>
   <!-- enter any other keywords in dc:subject elements -->
   <!-- <dc:rights> -->
      <!-- enter any copyright information or the key string 'public domain' -->
   <!-- </dc:rights> -->
   <exslt:revision>
      <!-- enter use case name as above '.' version of use case in ID attribute 
           -->
      <rdf:Description xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
                       xmlns:dc="http://purl.org/dc/elements/1.1/"
                       ID="module:function.use-case.number.version">
         <exslt:version><!-- enter version of use case --></exslt:version>
         <!-- enter email address in email attribute (optional) -->
         <!-- enter URL in url attribute (optional) -->
         <!-- add no-spam="no" if you don't mind your email address appearing on
              web pages -->
         <dc:creator email="your@email.address.com" 
                     url="http://your.website.com/">
            <!-- enter your name -->
         </dc:creator>
         <dc:date><!-- enter the date in YYYY-MM-DD format --></dc:date>
         <dc:description xmlns="http://www.w3.org/1999/xhtml">
            <!-- enter a brief description of the implementation; you may use 
                 XHTML -->
         </dc:description>
      </rdf:Description>
   </exslt:revision>
</rdf:Description>

<exslt:doc xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns="">
   <!-- choose whether to document the implementation in DocBook or XHTML 
        Strict; include documentation about any prerequisites for the 
        use case -->
   <!-- <section> -->
      <!-- enter DocBook documentation for the implementation -->
   <!-- </section> -->
   <html:div xmlns="http://www.w3.org/1999/xhtml">
      <!-- enter XHTML documentation for the implementation; use h3-h6 elements 
           for headings -->
   </html:div>
</exslt:doc>

</exslt:use-case>